  <!-- MAIN-CATEGORIES::START -->
  <section class="main-categories">
    <div id="tv-series" class="category">
      <h1>TV Series</h1>
      <% latestAnimes.forEach(anime => { %>
        <% if (anime.animeType === "مسلسل") { %>  <!-- تحقق من أن تصنيف الأنمي هو "مسلسل" -->
          <div class="show" onclick="window.location='/anime/<%= anime._id %>'">
            <div class="show-image-container">
              <img src="<%= anime.imagePath %>" alt="<%= anime.name %>">
              <div class="show-image-overlay">
                <i class="fa fa-play" aria-hidden="true"></i>
              </div>
            </div>
            <div class="text-info">
              <p><%= anime.name %></p>
              <p id="show-info-1"><%= anime.status %></p>
              <p id="show-info-2"><%= anime.totalEpisodes %> EPS</p>
            </div>
          </div>
        <% } %>
      <% }) %>
      
